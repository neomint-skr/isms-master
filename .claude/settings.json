{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./.memory/**)",
      "Edit(./.memory/**)",
      "Write(./.memory/**)",
      "Edit(./INDEX.md)",
      "Write(./INDEX.md)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node scripts/hooks/global-sync.mjs",
            "timeout": 30,
            "statusMessage": "Globale Config pruefen..."
          },
          {
            "type": "command",
            "command": "node scripts/hooks/ensure-prerequisites.mjs",
            "timeout": 30,
            "statusMessage": "Prerequisites pruefen..."
          },
          {
            "type": "command",
            "command": "node scripts/hooks/session-start.mjs",
            "timeout": 10,
            "statusMessage": "Session-Kontext laden..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node scripts/hooks/post-commit-push.mjs",
            "timeout": 30,
            "statusMessage": "Pushing to remote..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node scripts/hooks/pre-commit-check.mjs",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
